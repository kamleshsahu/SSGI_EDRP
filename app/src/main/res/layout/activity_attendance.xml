<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/parent1"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/dates"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:elevation="0dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tap"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="From Date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="9.5sp" />

            <TextView
                android:id="@+id/fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:hint="From Date"
                android:onClick="datePicker"
                android:paddingBottom="1dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="2dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tap"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="To Date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="9.5sp" />

            <TextView
                android:id="@+id/toDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:hint="To Date"
                android:onClick="datePicker"
                android:paddingBottom="1dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/sTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dates"
            android:visibility="visible"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="#ffffff"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/white" />
        <LinearLayout
            android:background="@color/colorPrimary"
            android:layout_below="@id/sTabLayout"
            android:id="@+id/blueline"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:orientation="horizontal"></LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_below="@+id/parent1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200sp"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:visibility="visible" />

        <TextView
            android:id="@+id/disp_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="60sp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="RETRY"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="220sp"
            android:background="@drawable/retry"
            android:onClick="RetryTask"
            android:textColor="#fff"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/maindisplay"
        android:layout_width="match_parent"
        android:layout_below="@id/parent1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/simpleViewPager"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>




</RelativeLayout>