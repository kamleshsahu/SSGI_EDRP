<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="20dp"
    android:elevation="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="ATTENDANCE REPORT"
        android:textSize="17sp" />

    <TextView
        android:layout_margin="1dp"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:elevation="2dp"
        android:background="@drawable/dash_rect"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/white"
        android:id="@+id/bw_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:background="@drawable/circle"
                android:gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/attended_lectures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textSize="30sp" />


                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-thin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="40sp" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-thin"
                    android:id="@+id/total_lectures"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    <com.example.riteshagrawal.sstc_edrp.CircularProgressBar
        android:background="@drawable/circle"
        android:id="@+id/attendence_p"
        style="@style/Widget.ProgressBar.Holo.CircularProgressBar"
        android:layout_width="130dp"
        android:layout_height="130dp"
        circular:cpb_title="75%"
        />
    </LinearLayout>

        </LinearLayout>

<LinearLayout
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
<TextView
    android:layout_margin="5dp"
    android:fontFamily="sans-serif-condensed"
    android:elevation="2dp"
    android:paddingBottom="3dp"
    android:paddingTop="3dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:textAlignment="center"
    android:textColor="@color/white"
    android:textSize="11sp"
    android:text="TOTAL ATTENDANCE"
    android:background="@drawable/dash_rect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-condensed"
        android:elevation="2dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:text="% ATTENDANCE"
        android:background="@drawable/dash_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>


    </LinearLayout>





</LinearLayout>