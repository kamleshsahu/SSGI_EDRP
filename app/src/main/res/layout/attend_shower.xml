<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/maindisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="batch"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_toRightOf="@id/name"
                android:text="branch"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roll_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/branch"

                android:text="roll no"
                android:textSize="20sp" />
            android:textSize="20sp" />

            <TextView
                android:id="@+id/sem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/roll_no"
                android:text="sem"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sem"
                android:text="sec"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:elevation="0dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="0.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:padding="2dp"
    android:background="@drawable/tap"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
            <TextView
                android:text="From Date"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="9.5sp"
                />
            <TextView
                android:layout_marginTop="-3dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="1dp"
                android:gravity="center_horizontal"
                android:id="@+id/fromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="From Date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:onClick="datePicker"/>
</LinearLayout>
            <TextView
                android:padding="2dp"
                android:background="@color/white"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />
            <LinearLayout
                android:padding="2dp"
                android:background="@drawable/tap"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="To Date"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="9.5sp"
                    />
                <TextView
                    android:layout_marginTop="-3dp"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingBottom="1dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/toDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To Date"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:onClick="datePicker"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="509dp"
            android:orientation="vertical"
            android:visibility="visible">


            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="200sp"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:visibility="visible" />
        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/sTabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabTextColor="@color/white"
            app:tabBackground="@color/colorPrimary"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/white"
            android:visibility="visible" />

        <android.support.v4.view.ViewPager
            android:id="@+id/simpleViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>


</LinearLayout>